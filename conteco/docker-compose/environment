#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="schema-registry.base"
export CONTECO_DC_GLOBAL_STACKNAMES="schema_registry"
export CONTECO_DC_GLOBAL_BOOTSTACKS="schema_registry"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST="conteco_dc_schema_registry_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT,$CONTECO_DC_SCHEMA_REGISTRY_COMMAND,$CONTECO_DC_SCHEMA_REGISTRY_VOLUMES,$CONTECO_DC_SCHEMA_REGISTRY_NETWORKS,$CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_LABELS,$CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT="\
'SCHEMA_REGISTRY_KAFKASTORE_CONNECTION_URL=zookeeper:2181', \
'SCHEMA_REGISTRY_HOST_NAME=schema_registry', \
'SCHEMA_REGISTRY_LISTENERS=http://schema_registry:8081'"
export CONTECO_DC_SCHEMA_REGISTRY_COMMAND=
export CONTECO_DC_SCHEMA_REGISTRY_VOLUMES="'${DOLLAR}{CONTECO_TYPE}_conteco_dc_schema_registry_volume:/var/lib/schema_registry/data'"
export CONTECO_DC_SCHEMA_REGISTRY_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_LABELS=
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_TYPE}_conteco_dc_schema_registry_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS schema-registry.base
export CONTECO_DC_SCHEMA_REGISTRY_KAFKA_ADVERTISED_LISTENERS=",HOST://localhost:29092"
export CONTECO_DC_SCHEMA_REGISTRY_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=",HOST:PLAINTEXT"
export CONTECO_DC_SCHEMA_REGISTRY_PORTS="8081:8081"
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS schema-registry.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
